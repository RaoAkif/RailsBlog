<h1>Users</h1>

<% @users.each do |user| %>
  <div>
    <img src="https://picsum.photos/200" alt="User - <%= user.name%> Picture">
    <div>
      <h2><%= user.name%></h2>
      <p>Number of posts: <%= user.posts_counter %></p>
      <%= link_to "See more", user_path(user.id), {:class => "button_class"} %>
    </div>
  </div>
<% end %>