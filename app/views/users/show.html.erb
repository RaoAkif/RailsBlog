<%= render @user %>

<div class="user_bio_container">
  <h2>Bio</h2>
  <p class="bio"><%= @user.bio%></p>
</div>

<div class="user_posts">
  <h2>Posts</h2>
  <% @user.last_3_posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id), {:class => "link_class"} do %>
      <%= render post %>
    <% end %>
  <%end%>

  <div class="button_container">
    <button class="button_class">
      <%= link_to "See all posts", user_posts_path(@user), {:class => "link_class2"} %>
    </button>
  </div>
</div>
