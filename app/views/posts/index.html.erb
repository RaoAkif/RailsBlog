<%= render @user %>

<% @posts.each do |post| %>
  <%= link_to user_post_path(@user.id, post.id), {:class => "link_class"} do %>
    <%= render post %>
  <% end %>

  <div class="comments">
    <% post.last_5_comments.includes([:author]).each do |comment| %>
      <%= render comment %>
    <% end %>
  </div>

<% end %>

<div class="button_container">
  <button class="button_class">Pagination</button>
</div>
