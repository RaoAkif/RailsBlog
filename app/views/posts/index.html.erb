<div class="user_container">
  <img src="<%= @user.photo %>" alt="Use picture" class="user_photo">
  <div class="user_data">
    <h2><%= @user.name%></h2>
    <p>Number of posts: <%= @user.posts_counter %></p>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="post_container">
    <%= link_to "#{post.title}", user_post_path(@user.id, post.id), class:"post_title" %> 
    <p><%= post.text%></p>
    <h3>Comments <%= post.comments_counter%>, Likes <%= post.likes_counter%></h3>
  </div>

  <div class="comments">
    <% post.last_5_comments.each do |comment| %>
      <p><%= comment.author.name %>: <%= comment.text%></p>
    <% end %>
  </div>

<% end %>

<button class="button">Pagination</button>